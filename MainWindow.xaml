<Window x:Class="Restaurants.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border CornerRadius="10" Padding="20" Background="#F5F5F5" Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Username:" FontSize="14" Margin="0,5"/>
                <TextBox Name="UsernameTextBox" Width="200" Height="30" Padding="5" />

                <TextBlock Text="Password:" FontSize="14" Margin="10,10,0,5"/>
                <PasswordBox Name="PasswordBox" Width="200" Height="30" Padding="5" />

                <Button Content="Login" Width="200" Height="35" Margin="0,15,0,0" Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
