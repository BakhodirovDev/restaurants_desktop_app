<Window x:Class="Restaurants.Pages.Windows.PaymentTypes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurants.Converters"
        mc:Ignorable="d"
        Title="Payments" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Window.Resources>
        <local:IndexToGradientConverter x:Key="IndexToGradientConverter" />
        <!-- Gradient brushlar -->
        <LinearGradientBrush x:Key="Button1Brush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8E2DE2" Offset="0"/>
            <GradientStop Color="#4A00E0" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button2Brush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F953C6" Offset="0"/>
            <GradientStop Color="#B91D73" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button3Brush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7F00FF" Offset="0"/>
            <GradientStop Color="#E100FF" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button4Brush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#11998e" Offset="0"/>
            <GradientStop Color="#38ef7d" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Button5Brush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B6B" Offset="0"/>
            <GradientStop Color="#FF8E53" Offset="1"/>
        </LinearGradientBrush>
        <!-- Header gradient -->
        <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2196F3" Offset="0"/>
            <GradientStop Color="#1976D2" Offset="1"/>
        </LinearGradientBrush>
        <!-- Tashqi Border uchun gradient -->
        <LinearGradientBrush x:Key="OuterBorderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#42A5F5" Offset="0"/>
            <GradientStop Color="#1976D2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Close button style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ButtonEllipse" Fill="#20FFFFFF"/>
                            <TextBlock Text="✕" FontWeight="Bold" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonEllipse" Property="Fill" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonEllipse" Property="Fill" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Payment button style -->
        <Style x:Key="PaymentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="230"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="MainBorder" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="18"
                                    BorderThickness="0">
                                <Grid>
                                    <Path x:Name="GraphicElement1" 
                                          Data="M0,0 L70,0 C85,0 90,10 90,25 L90,40 C90,55 85,60 70,60 L0,60 Z" 
                                          Fill="White" Opacity="0.1"
                                          HorizontalAlignment="Right" 
                                          VerticalAlignment="Top" 
                                          Stretch="Uniform" 
                                          Height="70" Width="70"/>
                                    <Path x:Name="GraphicElement2" 
                                          Data="M0,40 A40,40 0 1 1 40,0 L40,40 Z" 
                                          Fill="White" Opacity="0.08"
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Bottom" 
                                          Stretch="Uniform" 
                                          Height="45" Width="45"
                                          Margin="10,0,0,10"/>
                                    <TextBlock Text="{TemplateBinding Content}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Margin="18">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" 
                                                             BlurRadius="3" 
                                                             Opacity="0.3" 
                                                             Color="Black"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border x:Name="ShadowBorder"
                                    Background="Transparent"
                                    CornerRadius="18"
                                    Margin="0,0,0,-5"
                                    Panel.ZIndex="-1">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="ButtonShadow" 
                                                     BlurRadius="20" 
                                                     ShadowDepth="5" 
                                                     Opacity="0.25" 
                                                     Color="#000000"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- IsMouseOver trigger -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Opacity" Value="0.95"/>
                                <Setter TargetName="GraphicElement1" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="GraphicElement2" Property="Opacity" Value="0.15"/>
                                <Setter TargetName="ShadowBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="25" 
                                                         ShadowDepth="8" 
                                                         Opacity="0.4" 
                                                         Color="#000"/>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)"
                                                             To="-5" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)"
                                                             To="0" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <!-- IsPressed trigger -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="MainBorder" Property="Opacity" Value="0.85"/>
                                <Setter TargetName="ShadowBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" 
                                                         ShadowDepth="3" 
                                                         Opacity="0.2" 
                                                         Color="#000"/>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)"
                                                             To="0" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Tashqi Border -->
    <Border BorderBrush="{StaticResource OuterBorderBrush}" BorderThickness="3" CornerRadius="28" Background="Transparent" Margin="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="35" ShadowDepth="12" Opacity="0.4" Color="#2196F3"/>
        </Border.Effect>
        <Border CornerRadius="24" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header qismida o'ng tugma bilan siljitish -->
                <Border Grid.Row="0" CornerRadius="24,24,0,0" Background="{StaticResource HeaderBrush}"
                        MouseRightButtonDown="Header_MouseRightButtonDown"
                        MouseMove="Header_MouseMove"
                        MouseRightButtonUp="Header_MouseRightButtonUp">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Padding="30,25,30,25">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="To'lov Turlari" 
                                        FontSize="32" 
                                        FontWeight="Bold" 
                                        Foreground="White"
                                        HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="2" 
                                                        BlurRadius="4" 
                                                        Opacity="0.3" 
                                                        Color="Black"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="Quyidagi to'lov turlaridan birini tanlang" 
                                        FontSize="18" 
                                        Foreground="White"
                                        Opacity="0.9"
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1" 
                                                        BlurRadius="2" 
                                                        Opacity="0.2" 
                                                        Color="Black"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Button Grid.Column="1" 
                              Style="{StaticResource CloseButtonStyle}"
                              Click="CloseButton_Click"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Right"
                              Margin="0,15,15,0"/>
                        <Ellipse Width="70" Height="70" 
                               Fill="White" Opacity="0.05"
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Bottom"
                               Margin="20,-10,0,0"/>
                        <Ellipse Width="40" Height="40" 
                               Fill="White" Opacity="0.05"
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Top"
                               Margin="0,15,60,0"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled"
                                Padding="15">
                        <ItemsControl x:Name="PaymentMethodsPanel">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <Button Content="{Binding Text}"
                                                      Tag="{Binding}"
                                                      Click="PaymentButton_Click"
                                                      Style="{StaticResource PaymentButtonStyle}">
                                                    <Button.Background>
                                                        <MultiBinding Converter="{StaticResource IndexToGradientConverter}">
                                                            <Binding Path="Index"/>
                                                            <Binding Source="{StaticResource Button1Brush}"/>
                                                            <Binding Source="{StaticResource Button2Brush}"/>
                                                            <Binding Source="{StaticResource Button3Brush}"/>
                                                            <Binding Source="{StaticResource Button4Brush}"/>
                                                            <Binding Source="{StaticResource Button5Brush}"/>
                                                        </MultiBinding>
                                                    </Button.Background>
                                                </Button>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>